@using Fall2015.Models;

@model Fall2015.ViewModels.CreateEditStudentViewModel

@{
    ViewBag.Title = "Edit";
}
@Html.HiddenFor(a => a.Student.StudentId)
<h2>Edit @ViewBag.StudentName's details</h2>

<img src="@Model.Student.ImageFilePath" alt="Profile image" />

@using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary()

    //insert partial view here
    @Html.Partial("_CreateEditStudent")
    <input type="submit" value="Save" class="btn btn-default" id="saveButton"/>
    <h2>Choose another profile pucture</h2>
    <input type="file" name="image" />
}

